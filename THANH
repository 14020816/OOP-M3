class User
{
public:
	std::string ID;
	Card *myCard;
	std::string Name;
	double Balance;
	void ShowInfo()
	{
		std::cout << "User Infomation" <<std::endl;
		std::cout << "User Name: " << Name << std::endl;
		std::cout << "CardID: " << ID << std::endl;
		std::cout << "Balance: " << Balance << std::endl;
	}

	void Withdrawal()
	{
		double money;
		std::cin >> money;
		if (Balance >= money)
		{
			this->Balance = this->Balance - money;
			ChangeBalance();
			std::cout << "Cuccess, wait to take your card and get money " << std::endl;
		}
		else
		{
			std::cout << "Not Enough" << std::endl;
		}

	}

	void ChangeBalance()
	{
		std::string fileName = "[";
		fileName = fileName.append(ID);
		fileName = fileName.append("].dat");
		std::ofstream o(fileName);
		o << ID << "," << Name << "," << Balance << std::endl;
	}

	void AddMoney(double money)
	{
		this->Balance = this->Balance + money;
	}
	void newCard(Card *newCard)
	{
		this->myCard = newCard;
	}
	User getUserByID(std::string userID)
	{

		std::string fileName = "[";
		fileName = fileName.append(userID);
		fileName = fileName.append("].dat");
		std::fstream file(fileName);
		User tmp;
		std::getline(file, tmp.ID);
		std::getline(file, tmp.Name);
		std::string balance;
		std::getline(file, balance);
		tmp.Balance = std::stod(balance);
		return tmp;
	}

	std::string getNamebyID(std::string ID)
	{
		std::string fileName = "[";
		fileName = fileName.append(ID);
		fileName = fileName.append("].dat");
		std::fstream file(fileName);
		std::string name;
		if (std::getline(file, name)) {
			return name;
		}
		return NULL;

	}
	User(std::string ID, std::string Name, double Balance);
	User()
	{};
	~User();

private:

};
User::User(std::string ID, std::string Name, double Balance)
{
	std::string fileName = "[";
	fileName = fileName.append(ID);
	fileName = fileName.append("].dat");
	std::ofstream o(fileName);
	o << ID << "\n" << Name << "\n" << Balance << std::endl;
	this->ID = ID;
	this->Name = Name;
	this->Balance = Balance;
}

User::~User()
{
}

class ATM
{
public:
	ATM();
	~ATM();
	std::string ID;
	Card *curentCard;
	User *currentUser;
	std::string listIDCard[100];
	int index = 0;
	void Login(User *user)
	{
		
		std::string line;
		std::fstream file("TheTu.dat");
		while (std::getline(file,line))
		{
			listIDCard[index] = line;
			index++;
			std::getline(file,line);
		}
		currentUser = user;
		//currentUser->Balance *= 2;
		
		curentCard = user->myCard;
		
	//	curentUser = curentCard.user;
		if (validateCard(curentCard))
		{
			std::cout << "Hello: " << std::endl;
			bool c = validatePIN();
			if (c)
			{
				Portal();
			}
		}
		
	}
	bool validatePIN()
	{
		std::string PIN;
		std::cout << "Enter PIN" << std::endl;
		std::cin >> PIN;
		if (curentCard->PIN == PIN)
		{
			return true;
		}
		else
		{
			std::cout << "Invalid password" << std::endl;
			//curentCard = new Card;
			return false;
		}
	}
	bool validateCard(Card *inputCard)
	{
		
		for (int i = 0; i < index; i++)
		{
			if (listIDCard[i] == inputCard->ID)
			{
				return true;
			}
		}
		return false;
	}
	void Portal()
	{
		system("cls");
		std::cout << currentUser->Name << std::endl;
		std::cout << "1. Withdraw        2.Do Something" << std::endl;
		std::cout << "3. CheckInfo       4.Do Something" << std::endl;
		std::cout << "0. Exit" << std::endl;
		int action;
		std::cin >> action;
		switch (action)
		{
		case 1:
			currentUser->Withdrawal();
			Portal();
			break;
		case 3: 
			currentUser->ShowInfo();
			Sleep(5000);
			Portal();
			break;
		case 0: 
			break;
		default:
			break;
		}
	}

private:
};

ATM::ATM()
{
}

ATM::~ATM()
{
}

